<body
    style="
      margin: 0;
      padding: 0;
      background: url(./images/mainbackground.jpg);
      background-size: auto;
      background-color: #000;
      font-family: sans-serif;
      background-position: center 20px;
      
    "
  >
    <div
      style="
        width: 320px;
        height: fit;
        background: #cecdc2;
        color: #000;
        top: 50%;
        left: 50%;
        position: absolute;
        transform: translate(-50%, -50%);
        box-sizing: border-box;
        border-radius: 20px;
        padding: 50px 30px;
        box-shadow: 20px 20px 20px;
      "
    >
      <form class="loginform">
        <input
          style="
            width: 100%;
            margin-bottom: 20px;
            border: none;
            border-bottom: 2px solid #000;
            background: transparent;
            outline: none;
            height: 40px;
            color: #000;
          "
          type="text"
          id="user-name"
          name=""
          placeholder="Enter Username"
        />
        <input
          style="
            width: 100%;
            margin-bottom: 20px;
            border: none;
            border-bottom: 2px solid #000;
            background: transparent;
            outline: none;
            height: 40px;
            color: #000;
          "
          type="password"
          name=""
          id="password"
          placeholder="Enter Password"
        />
        <input
          style="
            width: 100%;
            margin-bottom: 20px;
            border: none;
            outline: none;
            height: 40px;
            background: #EC1212;
            color: #fff;
            font-family: 'Press Start 2P', cursive;
            font-size: 18px;
            border-radius: 6px;
          "
          type="submit"
          name=""
          id="login-btn"
          value="Login"
        /><br />
        <a
          href="/signup"
          style="
            font-weight: bold;
            font-size: 14px;
            color: #1100ff;
          "
          >Signup Instead</a
        >
        <br/><br/>
        <a
          href="/home"
          style="
            font-weight: bold;
            font-size: 14px;
            color: #1100ff;
          "
          >Home Jeeves!</a
        >
      </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="/js/login.js"></script>
  </body>